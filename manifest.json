{
  "manifest_version": 2,
  "name": "Appodeal",
  "description": "This extension will create Appodeal adunits in your Admob account",
  "version": "1.0",
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["jquery.min.js", "angular.min.js"]
    },
    {
      "matches": ["http://www.appodeal.com/*", "https://www.appodeal.com/*"],
      "js": ["login.js"]
    }
  ],
  "background": {
    "scripts": ["bg.js", "angular.min.js"],
    "persistent": false
  },
  "permissions": [
    "tabs",
    "http://*/*", "https://*/*",
    "storage"
  ]
}
