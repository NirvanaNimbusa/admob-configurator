{
  "manifest_version": 2,
  "name": "Appodeal",
  "description": "This extension will create and sync Appodeal adunits in your Admob account.",
  "version": "1.1",
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["http://www.appodeal.com/*", "https://www.appodeal.com/*", "https://apps.admob.com/*", "https://console.developers.google.com/*"],
      "js": ["jquery.min.js"]
    },
    {
      "matches": ["http://www.appodeal.com/profile/*", "https://www.appodeal.com/profile/*", "http://www.appodeal.com/dashboard*", "https://www.appodeal.com/dashboard*"],
      "js": ["login.js"]
    },
    {
      "matches": ["https://apps.admob.com/*"],
      "js": ["jquery.min.js", "admob.js"]
    }
  ],
  "background": {
    "scripts": ["bg.js"],
    "persistent": false
  },
  "permissions": [
    "tabs",
    "http://www.appodeal.com/*", "https://www.appodeal.com/*", 
    "https://apps.admob.com/*", 
    "https://console.developers.google.com/*",
    "storage"
  ]
}
